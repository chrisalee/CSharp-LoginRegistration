@{
    ViewData["Title"] = "Registration Page";
}
@model User


    <div class="jumbotron jumbotron-fluid" >
        <div class="container">
            <h1 class="display-5">Registration</h1>
            <a asp-action="Index" asp-controller="Home">Member Login</a>
        </div>
    </div>

    <form class="col-12" asp-action="Register" asp-controller="Home" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <span asp-validation-for="FirstName"></span>
                @* <label asp-for="FirstName"></label> *@
                <input class="form-control" placeholder="First Name" asp-for="FirstName">
                <small id="passwordHelpBlock" class="form-text text-muted">
                    Your First Name must be 3-20 characters long.
                </small>
            </div>
            <div class="form-group col-md-6">
                <span asp-validation-for="LastName"></span>
                @* <label asp-for="LastName"></label> *@
                <input class="form-control" placeholder="Last Name" asp-for="LastName">
                <small id="passwordHelpBlock" class="form-text text-muted">
                    Your Last Name must be 3-20 characters long.
                </small>
            </div>
        </div>
        <div class="form-group">
            <span asp-validation-for="Email"></span>
            @* <label asp-for="Email"></label> *@
            <input class="form-control" placeholder="Email" asp-for="Email">
            <small id="passwordHelpBlock" class="form-text text-muted">
                Please Enter Your Email.
            </small>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <span asp-validation-for="Password"></span>
                @* <label asp-for="Password"></label> *@
                <input class="form-control" placeholder="Password" asp-for="Password">
                <small id="passwordHelpBlock" class="form-text text-muted">
                    Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                </small>
            </div>
            <div class="form-group col-md-6">
                <span asp-validation-for="ConfirmPassword"></span>
                @* <label asp-for="ConfirmPassword"></label> *@
                <input class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword">
                <small id="passwordHelpBlock" class="form-text text-muted">
                    Retype your password to confirm.
                </small>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-outline-secondary" value="Register">
        </div>

    </form>